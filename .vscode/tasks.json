{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Linux g++ Debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "bin/Debug/SDL_2DPlatformer",
                "*.cpp",
                "-lSDL2",
                "-lSDL2_ttf",
                "-lSDL2_mixer"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Linux g++ Release",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "bin/Release/SDL_2DPlatformer",
                "*.cpp",
                "-lSDL2",
                "-lSDL2_ttf",
                "-lSDL2_mixer"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}